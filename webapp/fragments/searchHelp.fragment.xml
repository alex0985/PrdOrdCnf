<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog title="Select Production Orders" id="dialogSh">
		<form:SimpleForm editable="true">
			<Label text="Production Order"/>
			<Input id="idProdOrder" width="200px" value="{search>/order}"/>
			<Label text="Plant"/>
			<Input id="idPlant" width="200px" value="{search>/plant}"/>
			<Label text="MRP Controller"/>
			<Input id="idMRPController" width="200px" value="{search>/mrpc}"/>
		</form:SimpleForm>
		<beginButton>
			<Button text="Search" press="onSlhSearch"></Button>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onSlhCancel"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>